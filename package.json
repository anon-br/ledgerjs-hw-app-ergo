{
  "name": "ledger-ergo-js",
  "version": "0.1.14",
  "license": "MIT",
  "author": "anon-br",
  "description": "An Ergo Platform JS Library for communication with Ledger Hardware Wallets.",
  "homepage": "",
  "keywords": [
    "ergo",
    "ledger",
    "library",
    "hardwallet",
    "wallet"
  ],
  "engines": {
    "node": ">=18",
    "pnpm": ">=9"
  },
  "main": "./dist/erg.js",
  "module": "./dist/erg.mjs",
  "types": "./dist/erg.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/erg.d.mts",
        "default": "./dist/erg.mjs"
      },
      "require": {
        "types": "./dist/erg.d.ts",
        "default": "./dist/erg.js"
      }
    }
  },
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anon-br/ledger-ergo-js.git"
  },
  "bugs": {
    "url": "https://github.com/anon-br/ledger-ergo-js/issues"
  },
  "scripts": {
    "build": "tsup",
    "fix:format": "biome format --write",
    "fix:lint": "biome lint --write",
    "test:lint": "biome lint",
    "test:format": "biome format",
    "test:unit": "vitest run --no-coverage --environment=node",
    "watch:unit": "vitest --no-coverage --reporter=dot"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@fleet-sdk/core": "0.1.0-alpha.12",
    "@ledgerhq/hw-transport": "^6.27.7",
    "base-x": "^4.0.0",
    "bip32-path": "^0.4.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/typescript": "^2.0.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.2",
    "vitest": "^1.6.0"
  }
}
